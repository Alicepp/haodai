@import url('common/reset.css');
@import url('common/header.css');
@import url('common/common.css');
.agreement{
	padding:0.4rem;

}
.agreement h2{
	text-align: center;
	font-weight: bold;
	font-size: 0.507rem;
	line-height: 1;
	margin-bottom: 0.4rem;
	color: #444;

}
.agreement h3{
	font-weight: bold;
	font-size: 0.427rem;
	line-height: 1.5;
	margin-bottom: 0.133rem;
	color: #444;
}
.agreement p{
	font-size: 0.427rem;
	line-height: 1.5;
	margin-bottom: 0.267rem;
	word-break:break-all; 
}
.agreement b{
	font-weight: bold;
	color: #444;
}
.agreement p.end{
	text-align: center;
	margin: 0.4rem 0;
}
.agreement p .bSpan{
	border-bottom: 2px solid #5f616b;
	padding: 0 0.667rem;
}
.td2{
	text-indent: 2em;
}
.counter{
	counter-reset: num; 
}
.counter p:before{
	content: counters(num,".") ". ";
	counter-increment: num;
}